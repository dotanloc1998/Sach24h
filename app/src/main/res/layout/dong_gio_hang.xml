<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:descendantFocusability="blocksDescendants">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:id="@+id/imageViewHinhSanPham"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTenSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/cartColor"
                android:text="Tên sản phẩm:"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/spinnerSL"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonDauTru"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewSoLuongSanPham"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_margin="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonDauCong"
                    android:text="+"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/textViewGiaSanPham"
                android:textColor="@color/colorAccent"
                android:text="Giá sản phẩm:"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>